<% include partials/header %>


    <header>
      <img src="images/logo.png" alt="">
      <p><%= info %></p>
    </header>

    <section class="namecard">
      <div class="namecard-login">
        <% if (name) { %>
            <p class="namecard-greeting"> Welcome, <%= name %>!</p>
            <form class="namecard-exit" action="/bye" method="post">
              <button type="submit" >
                <img src="images/close.svg" alt="">
              </button>
            </form>
        <%} else { %>
          <div class="namecard-hello">
            <p class="namecard-greeting"> Hello, student!</p>
          </div>
        <% }%>
      </div>
        <form class="namecard-form" action="/hello" method="post">
          <label class="namecard-prompt" for="user">Please enter your name</label>
          <input class="namecard-name" type="text" name="user" id="user" placeholder="Enter a username">
          <input type="submit" name="" class="namecard-submit"value="Submit">
        </form>
      <footer>
      </footer>
      <br><br>
    </section>


<% include partials/footer %>
